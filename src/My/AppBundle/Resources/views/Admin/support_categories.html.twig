{% extends "AppBundle::admin.html.twig" %}

{% block content %}
    <a href="{{ path('admin_support_category_add') }}" class="btn pull-right btn-h1"><i class="fa fa-plus"></i> {{ 'admin.support_category_add'|trans }}</a>
    <h1>{{ 'admin.support_categories'|trans }}</h1>
    <hr>
    {% for key, subcategories in categories %}
        <h2>{{ ('support_category_types.'~key)|trans }}</h2>
        {% if subcategories|length %}
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>{{ 'support_category_name'|trans }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for root_category in subcategories %}
                    <tr style="font-weight:bold">
                        <td>{{ root_category.name }}</td>
                        <td class="min_col">
                            <a href="{{ path('admin_support_category_edit', { id: root_category.id }) }}" class="nodecor text-success"><i class="fa fa-pencil-square-o"></i></a>
                            <a href="{{ path('admin_support_category_delete', { id: root_category.id }) }}" class="nodecor text-error" onclick="return confirm('{{ 'you_sure'|trans }}')"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>

                    {% for category in root_category.children %}
                        <tr>
                            <td style="padding-left:50px">{{ category.name }}</td>
                            <td class="min_col">
                                <a href="{{ path('admin_support_category_edit', { id: category.id }) }}" class="nodecor text-success"><i class="fa fa-pencil-square-o"></i></a>
                                <a href="{{ path('admin_support_category_delete', { id: category.id }) }}" class="nodecor text-error" onclick="return confirm('{{ 'you_sure'|trans }}')"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            {{ 'no_data'|trans }}
        {% endif %}
    {% endfor %}
{% endblock content %}
