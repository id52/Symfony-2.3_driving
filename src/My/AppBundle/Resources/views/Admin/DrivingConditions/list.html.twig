{% extends 'AppBundle::admin.html.twig' %}

{% block content %}
    <a href="{{ path(router_item_add) }}" class="btn pull-right btn-h1">
        <i class="fa fa-plus"></i>
        {{ ('buttons.'~entity_name_s~'_add')|trans }}
    </a>
    <h1>{{ (entity_name_s~'_list_title')|trans }}</h1>
    <hr>

    {% if pagerfanta.currentPageResults|length %}
        <table class="table table-hover">
            <thead>
            <tr>
                {% for field in condition_list_fields %}
                    <th>{{ (entity_name_s~'_'~field)|trans({}, 'messages') }}</th>
                {% endfor %}
                <th class="min_col">Стоимость</th>
                <th class="min_col">Кол-во занятий</th>
                <th class="min_col"></th>
            </tr>
            </thead>
            <tbody>
            {% for data in pagerfanta.currentPageResults %}
                {% set entity = data[0] %}
                <tr>
                    {% for field in condition_list_fields %}
                        {% if field == 'withAt' %}
                            <td><i class="fa fa-plus {{ entity.withAt ? 'fa-plus' : 'fa-minus' }}"></i></td>
                        {% elseif field == 'isPrimary' %}
                            <td><i class="fa fa-plus {{ entity.isPrimary ? 'fa-plus' : 'fa-minus' }}"></i></td>
                        {% else %}
                            <td>{{ attribute(entity, field) }}</td>
                        {% endif %}
                    {% endfor %}
                    <td class="min_col text-right">{{ data['price']|number_format(0, ',' , ' ') }}</td>
                    <td class="min_col text-right">{{ entity.numberTickets|number_format(0, ',' , ' ') }}</td>
                    <td class="min_col text-left">
                        <a href="{{ path('admin_driving_conditions_packages', {id :entity.id}) }}" class="nodecor text-primary"><i class="fa fa-eye"></i></a>
                        <a href="{{ path(router_item_edit, { id: entity.id }) }}" class="nodecor text-success"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="{{ path('admin_driving_package_add', {id: entity.id}) }}" class="nodecor text-success"><i class="fa fa-share"></i></a>
                        {% if entity.countPackages == 0 %}
                            <a href="{{ path(router_item_delete, { id: entity.id }) }}" class="nodecor text-error" onclick="return confirm('{{ 'you_sure'|trans }}')"><i class="fa fa-times"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ 'no_data'|trans }}
    {% endif %}
    {% if pagerfanta.haveToPaginate %}
        {{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated', { prev_message: '←', next_message: '→' }) }}
    {% endif %}
{% endblock content %}
