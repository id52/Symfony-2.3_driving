{% extends "AppBundle::admin.html.twig" %}

{% block content %}
    <a href="{{ path('admin_feedbackEmail_add') }}" class="btn pull-right btn-h1"><i class="fa fa-plus"></i> {{ 'admin.feedbackEmail_add'|trans }}</a>
    <h1>{{ 'admin.feedbackEmails'|trans }}</h1>
    <hr>
    {% if pagerfanta.currentPageResults|length %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'feedbackEmail_name'|trans }}</th>
                <th>{{ 'feedbackEmail_email'|trans }}</th>
                <th class="min_col"></th>
            </tr>
            </thead>
            <tbody>
            {% for feedbackEmail in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ feedbackEmail.name }}</td>
                    <td>{{ feedbackEmail.email }}</td>
                    <td class="min_col">
                        <a href="{{ path('admin_feedbackEmail_edit', { id: feedbackEmail.id }) }}" class="nodecor text-success"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="{{ path('admin_feedbackEmail_delete', { id: feedbackEmail.id }) }}" class="nodecor text-error" onclick="return confirm('{{ 'you_sure'|trans }}')"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ 'no_data'|trans }}
    {% endif %}
    {% if pagerfanta.haveToPaginate %}
        {{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated', { prev_message: '←', next_message: '→' }) }}
    {% endif %}
{% endblock content %}
