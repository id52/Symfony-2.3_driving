{% extends "AppBundle::admin.html.twig" %}

{% block content %}
    <a href="{{ path('admin_promo_add') }}" class="btn pull-right btn-h1"><i class="fa fa-plus"></i>{{ 'admin.promo_add'|trans }}</a>
    <a href="{{ path('admin_promo_key_generate') }}" class="btn pull-right btn-h1"><i class="fa fa-plus"></i> {{ 'admin.promo_key_generate'|trans }}</a>
    <a href="{{ path('admin_promo_key_search') }}" class="btn pull-right btn-h1"><i class="fa fa-search"></i> {{ 'admin.promo_key_search'|trans }}</a>
    <h3>{{ 'admin.promos'|trans }}</h3>
    <hr>
    <hr>
    <a id="filter_link" href="#"><i class="fa fa-caret-down"></i> Фильтр</a>
    <div id="filter">
        {{ form_start(filter_form) }}
        {{ form_widget(filter_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-success pull-right">
                <i class="fa fa-filter"></i>
                <span>{{ 'buttons.filter'|trans }}</span>
            </button>
        </div>
        {{ form_end(filter_form) }}
    </div>
    <br>
    {% if pagerfanta.currentPageResults|length %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'admin.promo_name'|trans }}</th>
                <th>{{ 'admin.promo_restricted'|trans }}</th>
                <th>{{ 'admin.promo_key_count'|trans }}</th>
                <th>{{ 'admin.promo_trieds_count'|trans }}</th>
                <th>{{ 'admin.promo_not_paid'|trans }}</th>
                <th>{{ 'admin.promo_logs_count'|trans }}</th>
                <th>{{ 'promo_active'|trans }}</th>
                <th class="min_col"></th>
            </tr>
            </thead>
            <tbody>
            {% for promo_row in pagerfanta.currentPageResults %}
            {% set promo = promo_row[0] %}
                <tr>
                    <td>{{ promo.name }}</td>
                    <td>
                        {% if promo.restricted == 'users' %}
                            {{ 'promo_restricted_by_users'|trans }}
                        {% else %}
                            {{ 'promo_restricted_by_keys'|trans }}
                        {%endif%}
                    </td>
                    <td class="min_col text-right"><a href="{{ path('admin_promo_keys', { id: promo.id }) }}">{{ promo.restricted == 'keys' ? promo_row.keys_count : 1 }}</a></td>
                    <td class="min_col text-right">{{ promo_row.tried_enter_count }}</td>
                    <td class="min_col text-right">{{ promo_row.no_paid_users_count }}</td>
                    <td class="min_col text-right">{{ promo_row.paid_users_count }}</td>
                    <td class="min_col"><i class="fa {{ promo.active ? 'fa-plus' : 'fa-minus' }}"></i></td>
                    <td class="min_col">
                        <a href="{{ path('admin_promo_key_export_csv', {promo:promo.id, type:"both"}) }}" class="nodecor text-success" title="CSV"><i class="fa fa-external-link"></i></a>
                        <a href="{{ path('admin_promo_key_export_xls', {promo:promo.id, type:"both"}) }}" class="nodecor text-success" title="XLS"><i class="fa fa-external-link-square"></i></a>
                        <a href="{{ path('admin_promo_edit', { id: promo.id }) }}" class="nodecor text-success"><i class="fa fa-pencil-square-o"></i></a>
                        {% if promo_row.tried_enter_count == 0 and promo_row.no_paid_users_count == 0 and promo_row.paid_users_count == 0 and not promo.autocreate %}
                            <a href="{{ path('admin_promo_delete', { id: promo.id }) }}" class="nodecor text-error" onclick="return confirm('{{ 'you_sure'|trans }}')"><i class="fa fa-times"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ 'no_data'|trans }}
    {% endif %}
    {% if pagerfanta.haveToPaginate %}
        {{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated', { prev_message: '←', next_message: '→' }) }}
    {% endif %}
{% endblock content %}

{% block js %}
<script>
$(function() {
    {% if app.request.queryString == '' %}
    $('#filter').hide();
    {% endif %}
    $('#filter_link').click(function() {
        $('#filter').toggle();
        return false;
    });
});
</script>
{% endblock js %}
