{% extends "AppBundle::admin.html.twig" %}

{% block content %}
    <h1>{{ ('admin.check_regions_list')|trans }}</h1>
    <hr>

    <a id="filter_link" href="#"><i class="fa fa-caret-down"></i> Фильтр</a>
    <div id="filter">
        {{ form_start(filter_form) }}
            {{ form_widget(filter_form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-success pull-right">
                    <i class="fa fa-filter"></i>
                    <span>{{ 'buttons.filter'|trans }}</span>
                </button>
            </div>
        {{ form_end(filter_form) }}
    </div>
    <br>

    {% if pagerfanta.currentPageResults|length and exist_user %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="min_col">{{ 'user_id'|trans }}</th>
                <th>{{ 'user_email'|trans }}</th>
                <th>{{ 'user_name'|trans }}</th>
                <th class="min_col">{{ 'user_category'|trans }}</th>
                <th class="min_col">{{ 'user_status'|trans }}</th>
                <th class="min_col">{{ 'user_created_at'|trans }}</th>
                <th class="min_col"></th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastName }} {{ user.firstName }} {{ user.patronymic }}</td>
                    <td class="min_col">{{ user.category ? user.category.name : '--' }}</td>
                    <td class="min_col status_col">
                        {% if user.enabled %}<i class="fa fa-check-square-o" title="Зарегистрировался"></i>{% endif %}
                        {% if user.phoneMobileStatus == 'confirmed' %}<i class="fa fa-phone" title="Подтвердил телефон"></i>{% endif %}
                        {% if 'ROLE_USER_PAID' in user.roles %}<i class="fa fa-ruble" {{
                        user.promoUsedFor1 ? (user.sum1 ? 'style="color:green"' : 'style="color:blue"') : (user.is1OfflinePaid ? 'style="color:violet"' : '') }} title="Первая оплата{% if user.promoUsedFor1 %}{% if user.sum1 %}. Смешанная оплата{% else %}. Оплата промокодом{% endif %}{% endif %}{% if user.is1OfflinePaid %}. Оплата в офисе{% endif %}"></i>{% endif %}
                        {% if 'ROLE_USER_PAID2' in user.roles %}<i class="fa fa-ruble" {{ user.promoUsedFor2 ? (user.sum2 ? 'style="color:green"' : 'style="color:blue"') : (user.is2OfflinePaid ? 'style="color:violet"' : '') }} title="Вторая оплата{% if user.promoUsedFor2 %}{% if user.sum2 %}. Смешанная оплата{% else %}. Оплата промокодом{% endif %}{% endif %}{% if user.is2OfflinePaid %}. Оплата в офисе{% endif %}"></i>{% endif %}
                        {% if user.certificate %}<i class="fa fa-bookmark" title="Сдал итоговый экзамен"></i>{% endif %}
                        {% if user.moderated %}<i class="fa fa-exclamation-triangle" title="Проверен"></i>{% endif %}
                        {% if user.paradoxId %}<i class="fa fa-thumbs-up" title="Занесён в парадокс"></i>{% endif %}
                        {% if user.offline %}<i class="fa fa-user" title="Зарегистрирован оффлайн"></i>{% endif %}
                    </td>
                    <td class="min_col">{{ user.createdAt|localizeddate('long', 'none') }}</td>
                    <td class="min_col">
                        {% if user != app.user %}
                            <a href="{{ path('admin_check_regions_user_card', { id: user.id }) }}" class="nodecor text-primary"><i class="fa fa-eye"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if pagerfanta.haveToPaginate %}
            {{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated', { prev_message: '←', next_message: '→' }) }}
        {% endif %}
        Всего отфильтровано пользователей: {{ pagerfanta.count }}
    {% else %}
        {{ 'no_data'|trans }}
    {% endif %}
{% endblock content %}


{% block js %}
    <script>
        $(function() {
            {% if app.request.queryString == '' %}
            $('#filter').hide();
            {% endif %}
            $('#filter_link').click(function(e) {
                e.preventDefault();
                $('#filter').toggle();
            });
        });
    </script>
{% endblock js %}
