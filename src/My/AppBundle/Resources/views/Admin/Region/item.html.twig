{% extends "AppBundle::admin.html.twig" %}

{% block content %}
    <div class="alert alert-warning" id="empty-categories-alert">
        {{ 'region.empty_categories'|trans }}
    </div>
    <div class="alert alert-warning" id="zero-second-price-alert">
        {{ 'region.zero_second_price'|trans }}
    </div>
    <h3>{{ (app.request.get('_route') == router_item_edit ? ('admin.'~entity_name_s~'_edit_title') : ('admin.'~entity_name_s~'_add_title'))|trans }}</h3>
    <hr>
    {{ form_start(form) }}

    <div class="control-group">
        {{ form_label(form.name) }}
        <div class="input-append">
            {{ form_widget(form.name) }}
        </div>
    </div>
        <div class="control-group">
        <label class="control-label" for="promo_active">Нет филиала?</label>
        <div class="controls">
            {{ form_widget(form.filial_not_existing) }}
        </div>
    </div>

    {% if categories %}
    <fieldset>
        <legend>{{ 'region_categories_prices'|trans }}:</legend>
        {% for category in categories %}
            <div class="control-group">
                <label for="price_{{ category.id }}" class="control-label">{{ category.name }}:</label>
                <div class="controls">
                    <div class="input-append">
                        <input value="{{ category_prices[category.id] is defined ? category_prices[category.id] : 0 }}" type="text" class="span1" name="category_prices[{{ category.id }}]" id="category_price_{{ category.id }}">
                        <span class="add-on">{{ 'RUB'|trans }}</span>
                    </div>
                    <label style="display:inline-block"><input class="category-price"{{ category_prices_active[category.id] is defined and category_prices_active[category.id] ? 'checked="checked"' : '' }} name="category_prices_active[{{ category.id }}]" type="checkbox" /> Активна?</label>
                </div>
            </div>
        {% endfor %}
    </fieldset>
    {% endif %}

    {% if services %}
    <fieldset>
        <legend>{{ 'region_services_prices'|trans }}:</legend>
        <div class="control-group">
            <label class="control-label"> </label>
            <div class="controls">
                <div class="span1">main</div>
                <div class="span1 e_prices">comb</div>
                <div class="span1 e_prices">expr</div>
            </div>
        </div>
        {% for service in services %}
            <div class="control-group">
                <label for="service_price_{{ service.id }}" class="control-label">{{ service.name }}:</label>
                <div class="controls">
                    <div class="input-append">
                        <input value="{{ service_prices[service.id] is defined ? service_prices[service.id] : 0 }}" type="text" class="span1{% if service.type == 'training' %} second-price{% endif %}" name="service_prices[{{ service.id }}]" id="service_price_{{ service.id }}">
                        <span class="add-on">{{ 'RUB'|trans }}</span>
                    </div>
                    {% if service.type == 'training' %}
                        <div class="input-append">
                            <input value="{{ service_prices_comb[service.id] is defined ? service_prices_comb[service.id] : 0 }}" type="text" class="span1{% if service.type == 'training' %} second-price{% endif %}" name="service_prices_comb[{{ service.id }}]" id="service_price_comb_{{ service.id }}">
                            <span class="add-on">{{ 'RUB'|trans }}</span>
                        </div>
                        <div class="input-append">
                            <input value="{{ service_prices_expr[service.id] is defined ? service_prices_expr[service.id] : 0 }}" type="text" class="span1{% if service.type == 'training' %} second-price{% endif %}" name="service_prices_expr[{{ service.id }}]" id="service_price_expr_{{ service.id }}">
                            <span class="add-on">{{ 'RUB'|trans }}</span>
                        </div>
                    {% else %}
                        <label style="display:inline-block"><input {{ service_prices_active[service.id] is defined and service_prices_active[service.id] ? 'checked="checked"' : '' }} name="service_prices_active[{{ service.id }}]" type="checkbox"> Активна?</label>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </fieldset>
    {% endif %}

    <fieldset>
        <legend>{{ 'region_discount_1'|trans }}:</legend>
        {{ form_row(form.discount_1_amount) }}
        {{ form_row(form.discount_1_date_from) }}
        {{ form_row(form.discount_1_date_to) }}
        {{ form_row(form.discount_1_timer_period) }}
    </fieldset>

    <fieldset>
        <legend>{{ 'region_discount_2'|trans }}:</legend>
        {{ form_row(form.discount_2_first_amount) }}
        {{ form_row(form.discount_2_first_days) }}
        {{ form_row(form.discount_2_between_period_days) }}
        {{ form_row(form.discount_2_second_amount) }}
        {{ form_row(form.discount_2_second_days) }}
    </fieldset>


    <div class="form-actions">
        <button type="submit" class="btn btn-success">
            <i class="fa fa-download"></i>
            <span>{{ 'admin.buttons.save'|trans }}</span>
        </button>
        {% if app.request.get('_route') == router_item_edit %}
            <a href="{{ path(router_item_delete, { id: entity.id }) }}" class="btn btn-danger" onclick="return confirm('{{ 'you_sure'|trans }}')">
                <i class="fa fa-trash-o"></i> <span>{{ 'admin.buttons.delete'|trans }}</span>
            </a>
        {% endif %}
        <a class="btn pull-right" href="{{ path(router_list) }}"><i class="fa fa-arrow-left"></i> {{ 'admin.buttons.back_to_list'|trans }}</a>
    </div>
    {{ form_end(form) }}
{% endblock content %}

{% block js %}
    {{ parent() }}
    {% javascripts '@AppBundle/Resources/public/js/*'%}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
