                    <div class="label">{{ 'profile_place_stroenie'|trans }}:</div>
                    {{ app.user.placeStroenie }}
                </li>
            {% endif %}
            {% if app.user.placeKorpus %}
                <li>
                    <div class="label">{{ 'profile_place_korpus'|trans }}:</div>
