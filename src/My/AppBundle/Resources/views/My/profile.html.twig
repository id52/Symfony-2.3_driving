            <div>Договор на вождение для покупки талонов</div>
            <div class="btn btn-green" onclick="window.open('{{ path('my_print') }}');">Распечатать</div>
            <br>
            <br>
            <h2>Мед справка</h2>
            <div class="upload_medical_certificate">
                {% for doc in app.user.documents %}
                    {% if doc.type == 'medical_certificate' %}
                        <div class="upload_docs upload_docs_container">
                            <a href="{{ doc.webPath }}" target="_blank" class="upload_docs_link">
                                <img data-id="{{ doc.id }}" src="{{ doc.webPath|imagine_filter('image_profile_docs') }}" alt="">
                                {% if doc.type == 'medical_certificate' and doc.status != 'confirm' %}
                                    <b class="upload_doc_image">x</b>
                                {% endif %}
                            </a>
                            {% if doc.status == 'fail' and doc.type == 'medical_certificate' %}
                                <br><b class="docs_comment_fail">Отклонено</b>
                            {% elseif doc.status == 'confirm' and doc.type == 'medical_certificate' %}
                                <br><span class="docs_comment_success">Одобренно</span>
                            {% endif %}
                            <br><span class="docs_comment">{{ doc.comment }}</span>
                        </div>
                    {% endif %}
