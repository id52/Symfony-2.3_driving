        {% if app.user.webgroup %}
            <ul class="info-list">
                <li>
                    <div class="label">{{ 'user_webgroup'|trans }}:</div>
                    {{ app.user.webgroup }}
                </li>
            </ul>
            <div class="hr"></div>
        {% endif %}

        {% if app.user.certificate %}
            <ul class="info-list">
                <li class="user-certificate">
                    {{ settings_notifies['profile_final_exam']|replace({'%certificate_link%': path('my_certificate')})|raw }}
