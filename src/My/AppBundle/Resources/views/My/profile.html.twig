                            <a href="{{ doc.webPath }}" target="_blank" class="upload_docs_link">
                                <img data-id="{{ doc.id }}" src="{{ doc.webPath|imagine_filter('image_profile_docs') }}" alt="">
                                {% if doc.type == 'contract' and doc.status != 'confirm' %}
                                    <b class="upload_doc_image">x</b>
                                {% endif %}
                            </a>
                            {% if doc.status == 'fail' and doc.type == 'contract' %}
