            <div class="btn btn-green medical_certificate upload_doc_btn upload_docs_button" onclick="return $('#medical_certificate').click();">
                <span>Загрузить мед. справку</span>
            </div>
            <div class="medical_certificate_error"></div>
            <input id="medical_certificate" class="docs_upload" type="file" name="documents[medical_certificate]" data-url="{{ path('my_upload_docs', { type: 'medical_certificate' }) }}" accept="image/jpg,image/jpeg,image/png" style="display: none" multiple="">

            <h2>Договор</h2>
