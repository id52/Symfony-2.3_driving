                <span>Загрузить паспорт</span>
            </div>
            <div class="passport_error"></div>
            <input id="passport" class="docs_upload" type="file" name="documents[passport]" data-url="{{ path('my_upload_docs', { type: 'passport' }) }}" accept="image/jpg,image/jpeg,image/png" style="display: none" multiple="">

            <div>Вы можете загрузить файлы с расширением .jpg и .png</div>
            <div class="hr"></div>
        {% endif %}
