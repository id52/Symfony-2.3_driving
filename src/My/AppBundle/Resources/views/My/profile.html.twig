            </div>
            <div class="contract_error"></div>
            <input id="contract" class="docs_upload" type="file" name="documents[contract]" data-url="{{ path('my_upload_docs', { type: 'contract' }) }}" accept="image/jpg,image/jpeg,image/png" style="display: none" multiple="">

