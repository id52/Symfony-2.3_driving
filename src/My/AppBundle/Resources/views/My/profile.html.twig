    </section>
</div>
{% endblock content %}

{% block js %}
<script src="/v2/js/jquery-ui.js"></script>
<script src="/v2/js/jquery.fileupload.js"></script>
<script src="/v2/js/jquery.Jcrop.js"></script>
<link href="/v2/css/jquery.Jcrop.css" type="text/css" rel="stylesheet">
<link href="/v2/css/jquery.Jcrop.fix.css" type="text/css" rel="stylesheet">
<script>
$(function() {
    var sblock = $('#mobile_status');
    var submit = $('input[type=submit]', sblock);
    var input = $('input[type=text]', sblock);
    var more = $('.more', sblock);

    var confirmMethod = function() {
        var input = $('input[type=text]', sblock);
        submit.attr('disabled', 'disabled');
        $('.err-text', sblock).remove();
        $.getJSON('{{ path('my_mobile_confirm_ajax') }}?code=' + input.val(), function(data) {
            if (data.error) {
                $('.input', sblock).addClass('error');
                $('.form', sblock).append('<div class="err-text">Ошибка! Введен неверный код подтверждения</div>');
                submit.removeAttr('disabled');
            } else {
                sblock.html('{% include 'AppBundle:My:_mobile_confirmed.html.twig' %}');
            }
        });
        return false;
    };

    var resend = function() {
        $.getJSON('{{ path('my_mobile_status_ajax') }}');
        $('.input', sblock).removeClass('error');
        $('[type=text]', sblock).val('');
        $('.err-text', sblock).remove();
        return false;
    };

    var init = function() {
        var submit = $('input[type=submit]', sblock);
        var more = $('.more', sblock);
        submit.on('click', confirmMethod);
        submit.removeAttr('disabled');
        input.keypress(function(e) { if (e.which == 13) confirmMethod(); });
        more.on('click', resend);
    };

    $('.red', sblock).on('click', function() {
        var btn_danger = $(this);
        $.getJSON('{{ path('my_mobile_status_ajax') }}', function() {
            sblock.html('{% include 'AppBundle:My:_mobile_sended.html.twig' %}');
            init();
        });
    });

    init();
    removeUpload();

    $('.docs_upload').fileupload({
        send: function () {
            var id = $(this).attr('id');
            $('.'+id).addClass('ajax-load-documents');
        },
        done: function (e, data) {
            var id = $(this).attr('id');
            $('.'+id).removeClass('ajax-load-documents');
            if (data.result.files) {
                $.each(data.result.files, function (index, file) {
                    $('.upload_' + id).append('<div class="upload_docs upload_docs_container"><a href="'+file.webPathOrig+'" target="_blank" class="upload_docs_link"><img data-id="'+file.id+'" src="'+file.webPath+'" alt=""><b class="upload_doc_image">x</b></a></div>');
                });
                removeUpload();
            } else {
                var errors = data.result.errors ? data.result.errors.join('<br>') : 'Неизвестная ошибка.';
                $('.'+id+'_error').html(errors).show();
                setInterval(function () {
                    $('.'+id+'_error').html('').hide();
                }, 5000);
            }
        },
        fail: function () {
            var id = $(this).attr('id');
            $('.'+id).removeClass('ajax-load-documents');
            $('.upload-fail').html('Ошибка сервера.').show().delay(1500).hide();
        }
    });

    function removeUpload() {
        $('.upload_docs').on('click', '.upload_doc_image', function (e) {
            e.preventDefault();
            if (!confirm('Вы хотите удалить изображение документа?')) {
                return;
            }
            var document = $(this).closest('.upload_docs_container');
            var id = document.find('img').data('id');

            $.post('{{ path('my_deleted_docs') }}', {id: id}, function () {
                document.remove();
            });
        });
    }
});
</script>
{% endblock js %}
