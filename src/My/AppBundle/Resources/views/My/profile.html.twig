            {% if app.user.workPlace %}
                <li>
                    <div class="label">{{ 'profile_work_place'|trans }}:</div>
                    {{ app.user.workPlace }}
                </li>
            {% endif %}
            {% if app.user.workPosition %}
                <li>
                    <div class="label">{{ 'profile_work_position'|trans }}:</div>
                    {{ app.user.workPosition }}
                </li>
            {% endif %}
            </ul>
            <div class="hr"></div>
        {% endif %}

        {% if app.user.regionPlace %}
            <h2>{{ 'profile_region_place'|trans }}:</h2>
            <ul class="info-list">
                <li>
                    <div class="label">{{ 'profile_region'|trans }}:</div>
                    {{ app.user.region }}
                </li>
                <li>
                    <div class="label">{{ 'profile_region_place'|trans }}:</div>
                    {{ app.user.regionPlace }}
                </li>
            </ul>
            <div class="hr"></div>
        {% endif %}

        {% if app.user.phoneMobile %}
            <h2>{{ 'profile_phone_data'|trans }}:</h2>

            <ul class="info-list">
            {% if app.user.phoneHome %}
                <li>
                    <div class="label">{{ 'profile_phone_home'|trans }}:</div>
                    +7 {{ app.user.phoneHome }}
                </li>
            {% endif %}
                <li>
                    <div class="label">{{ 'profile_phone_mobile'|trans }}:</div>
                    {{ app.user.mobileFormat }}
                    <div class="submit-phone" id="mobile_status">
                    {% if 'confirmed' == app.user.phoneMobileStatus %}
                        {% include 'AppBundle:My:_mobile_confirmed.html.twig' %}
                    {% elseif 'sended' == app.user.phoneMobileStatus %}
                        {% include 'AppBundle:My:_mobile_sended.html.twig' %}
                    {% else %}
                        <div class="bg toggle red">{{ 'mobile_status.nulled'|trans }}</div>
                    {% endif %}
                    </div>
                </li>
            </ul>
            <div class="hr"></div>
        {% endif %}

        {% if app.user.region.filialNotExisting is defined and app.user.region.filialNotExisting %}
            <h2>Документы о завершении обучения:</h2>

            <ul class="info-list">
                <li>
                    <div class="label">Статус:</div>
                    <div class="submit-phone">
                        {% if 'doc_is_done' == app.user.finalDocStatus %}
                            <div class="bg green">Документ оформлены</div>
                        {% elseif 'doc_is_picked' == app.user.finalDocStatus %}
                            <div class="bg green">Документы забрал</div>
                        {% elseif app.user.finalDocStatus is null %}
                            <div class="bg red">Обучение не законченно</div>
                        {% else %}
                            <div class="bg red">Статус не определен</div>
                        {% endif %}
                    </div>
                </li>
            </ul>
            <div class="hr"></div>
        {% endif %}

        {% if app.user.region.filialNotExisting is defined and app.user.region.filialNotExisting and is_granted("ROLE_USER_PAID2") %}
