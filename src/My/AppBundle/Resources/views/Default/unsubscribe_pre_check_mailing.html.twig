{% extends "AppBundle::layout_unsubscribe.html.twig" %}

{% block content %}
    <div id="unsubscribe_mailing" class="mainContent">
        <section class="unsubscribe">
            <div class="title"><h1>{{ 'titles.unsubscribe_pre_check'|trans }}</h1></div>
        </section>
        <section class="unsubscribe_body">
            <div class="title">{{ 'unsubscribe_body_text'|trans }}</div>
        </section>

        <div class="form-actions">
            <a id="unsubscribe_button_yes" href="{{ url('my_unsubscribe_mailing_done', {'email':  email }) }}">
                <input type="button" id="button_yes" class="btn btn-success"
                       value="{{ 'unsubscribe_button_yes'|trans }}">
            </a>
            <a href="{{ path('homepage') }}">
                <input type="button" id="button_no" class="btn btn-success" value="{{ 'unsubscribe_button_no'|trans }}">
            </a>
        </div>
    </div>
{% endblock content %}
