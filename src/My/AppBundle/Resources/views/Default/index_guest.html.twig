        {% for faq in faqs %}
            {% if faq.status %}
                <figure class="qu">
                    <div class="toggle"><span></span>{{ faq.question }}</div>
                    <div class="in">{{ faq.answer|raw }} <span class="close"></span></div>
                </figure>
            {% endif %}
        {% endfor %}
    </div>
</div>

<div class="pay2">
    <a class="demo-less" href="{{ path('article_show', { id: 'demo' }) }}">Демонстрационный<br>фрагмент урока</a>
    <a class="demo-vid" href="{{ path('article_show', { id: 'video' }) }}">Видеоролик</a>

    <div class="r">
        Как доступ к материалам, так и пакет регистрации,
        <div class="big">Вы можете оплатить с помощью</div>
        <div class="img"><img src="/v2/img/payments.png" width="604" height="96" alt=" "></div>
        Для этого нажмите на кнопку «<a href="#" class="link-registr">Оплатить обучение</a>»,<br>выберите способ оплаты и следуйте указаниям системы.
    </div>

    <div class="links"><a class="link bg-red link-registr" href="#">Оплатить обучение</a></div>
</div>
{% endblock content %}

{% block js %}
<script>
$(function() {
    var discount_data = eval({{ discount_data|json_encode|raw }});

    var reg_region = $('#reg-region');
    var reg_category = $('#reg-category');

    var l_region = $('#l-region');
    var l_category = $('#l-category');
    var l_discount = $('#l-discount');

    for (var region_id in discount_data) {
        if (discount_data.hasOwnProperty(region_id)) {
            var region = discount_data[region_id];
            l_region.append('<option value="' + region_id + '">' + region.name + '</option>');
        }
    }
    l_region.trigger('refresh');

    var change_l_category = function() {
        var region_id = l_region.val();
        var category_id = l_category.val();
        var region = discount_data[region_id];
        var category = region['categories'][category_id];
        if (category.discount) {
            var action_block = $('.action', l_discount);
            action_block.show();
            $('#l-discount-discount').html(category.discount);
            $('#l-discount-price').html(category.price);
            $('#l-discount-price-with-discount').html(Math.max(category.price - category.discount, 0));

            var time = category.seconds_left;
            var days = (Math.floor(time/60/60/24)).toString();
            var hours = (Math.floor(time/60/60) - days*24).toString();
            var minutes = (Math.floor(time/60) - (days*24*60 + hours*60)).toString();
            var seconds = (time - (days*24*60*60 + hours*60*60 + minutes*60)).toString();
            if (days.length < 2) days = '0'+days;
            if (hours.length < 2) hours = '0'+hours;
            if (minutes.length < 2) minutes = '0'+minutes;
            if (seconds.length < 2) seconds = '0'+seconds;
            var nums = $('.timer .num', action_block);
            nums.eq(0).html(days);
            nums.eq(1).html(hours);
            nums.eq(2).html(minutes);
            nums.eq(3).html(seconds);

            /* hack clearing all timeouts */
            var highestTimeoutId = setTimeout(' ', 10);
            for (var i = 0; i < highestTimeoutId; i++) {
                clearTimeout(i);
            }
            /* end hack */

            initTimer();
        } else {
            var price_block = $('.price', l_discount);
            price_block.show();
            $('span', price_block).html(category.price);
        }
        reg_region.val(l_region.val());
        reg_region.trigger('refresh');
        reg_region.trigger('change');
        reg_category.val(l_category.val());
        reg_category.trigger('refresh');

        l_region.customForm('destroy');
        reg_region.customForm('destroy');
        l_category.customForm('destroy');
        reg_category.customForm('destroy');
        $('form').customForm({
            select: {
                elements: 'select.customSelect',
                structure: '<div class="selectArea"><div class="selectIn"><div class="selectText"></div></div></div>',
                text: '.selectText',
                btn: '.selectIn',
                optStructure: '<div class="selectSub"><div class="customScroll"><ul></ul></div><div class="bind"></div></div>',
                maxHeight: 406
            },
            radio: {
                elements: 'input.customRadio'
            },
            checkbox: {
                elements: 'input.customCheckbox'
            }
        });
    };
    var change_l_region = function() {
        l_category.html('');
        $('.action', l_discount).hide();
        $('.price', l_discount).hide();
        var region_id = l_region.val();
        var region = discount_data[region_id];
        for (var category_id in region.categories) {
            if (region.categories.hasOwnProperty(category_id)) {
                var category = region.categories[category_id];
                l_category.append('<option value="' + category_id + '" data-img="' + category.image + '">' + category.name + '</option>');
            }
        }
        l_category.find('option:eq(0)').prop('selected', true);
        l_category.trigger('refresh');
        change_l_category();
    };
    l_category.change(change_l_category);
    l_region.change(change_l_region);
    change_l_region();

    $('.link-registr').click(function(e) {
        e.preventDefault();
        $('#auth01').find('a.tab[href=#tab2]').click();
        $.simplebox('#auth01');
    });
});
</script>
{% endblock js %}
