<div class="modal auth-modal" id="auth01" style="margin:0 auto;width:303px">
    <div class="tabs" style="text-align:center">
        <span class="tab" style="color:#a62320">ВХОД В ЛИЧНЫЙ КАБИНЕТ УЧЕНИКА</span>
        {#<a class="tab" href="#tab1">Вход</a>#}
        {#<a class="tab" href="#tab2">Регистрация</a>#}
    </div>

    <div id="tab1">
        <div class="form">
            <form action="{{ path('fos_user_security_check') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token_auth }}" />
                <div class="row">
                    <div class="label">E-mail</div>
                    <div class="input">
                        <input id="js_login_username" name="_username" type="text">
                        <div class="err-text">
                            <strong>Ошибка!</strong><br>
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="label">Пароль</div>
                    <div class="input">
                        <input id="js_login_password" name="_password" type="password">
                        <div class="err-text">
                            <strong>Ошибка!</strong><br>
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="check">
                    <span class="pass-toggle">Восстановить пароль</span>
                    <input name="_remember_me" class="customCheckbox" id="forgot" type="checkbox" checked="checked">
                    <label for="forgot">Запомнить меня</label>
                </div>
                <div class="links">
                    <span class="link bg-green key-link">
                        Войти в личный кабинет
                        <input value="" type="submit">
                    </span>
                </div>
            </form>
        </div>

        <div class="restore">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="post">
                <div class="row">
                    <div class="label">Укажите e-mail, который Вы использовали для входа на сайт</div>
                    <div class="input">
                        <input id="js_reset_username" type="text" name="username">
                        <div class="err-text">
                            <strong>Ошибка!</strong><br>
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="links">
                    <span class="link bg-green">
                        Восстановить пароль
                        <input value="" type="submit">
                    </span>
                </div>
                <div class="close-toggle"><span>отмена, я вспомнил(а)</span></div>
            </form>
        </div>
    </div>

